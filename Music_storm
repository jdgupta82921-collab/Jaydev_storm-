songs.sort((a, b) => a.title.localeCompare(b.title));
  const categoryBtns = document.querySelectorAll('.category');

categoryBtns.forEach(btn => {
  btn.addEventListener('click', () => {
    categoryBtns.forEach(b => b.classList.remove('active'));
    btn.classList.add('active');

    const cat = btn.getAttribute('data-cat');
    filterSongs(cat);
  });
});

const library = document.getElementById('library');
const detail = document.getElementById('detail');
const songTitle = document.getElementById('songTitle');
const songMeta = document.getElementById('songMeta');
const audio = document.getElementById('audio');
const downloadBtn = document.getElementById('downloadBtn');
const searchInput = document.getElementById('searchInput');

function renderLibrary() {
  library.querySelectorAll('.song-card').forEach(e => e.remove());

  songs.forEach((song, index)=>{
    const card = document.createElement('div');
    card.classList.add('song-card', 'fade');
    card.textContent = song.title;
    card.addEventListener('click', ()=> showDetail(index));
    library.appendChild(card);
  });
}

renderLibrary();
  document.getElementById("totalCount").textContent = `${songs.length} Songs`;

function showDetail(index){
  const s = songs[index];
  songTitle.textContent = s.title;
  songMeta.textContent = s.singer ? `Singer: ${s.singer}` : "";
  audio.src = s.file;
  audio.play();

  downloadBtn.onclick = () => {
    const a = document.createElement("a");
    a.href = s.file;
    a.download = s.file;
    a.click();
  };

  library.style.display = "none";
  detail.style.display = "flex";
}

searchInput.addEventListener("input", ()=>{
  const value = searchInput.value.toLowerCase();
  document.querySelectorAll(".song-card").forEach(card=>{
    card.style.display = card.textContent.toLowerCase().includes(value)
      ? "block" : "none";
  });
});

function backToLibrary(){
  detail.style.display = "none";
  library.style.display = "flex";
}
  audio.addEventListener('ended', ()=>{
  let randomIndex = Math.floor(Math.random() * songs.length);
  showDetail(randomIndex);
});

function toggleTheme(){
  document.body.classList.toggle("dark");
  function filterSongs(category) {
  let filtered;

  if (category === "all") {
    filtered = songs;
  } else {
    filtered = songs.filter(song => song.category === category);
  }

  displaySongs(filtered);
  }
  function displaySongs(list) {
  library.querySelectorAll('.song-card').forEach(e => e.remove());

  list.forEach((song, index)=>{
    const card = document.createElement('div');
    card.classList.add('song-card', 'fade');
    card.textContent = song.title;
    card.addEventListener('click', ()=> showDetail(index));
    library.appendChild(card);
  });
  }
}
